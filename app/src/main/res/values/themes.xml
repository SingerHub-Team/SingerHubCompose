<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.SingerHub" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@color/solid_cream</item>
        <item name="android:colorPrimaryDark">@color/solid_cream</item>
    </style>

    <style name="SplashTheme" parent="Theme.SingerHub">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="android:statusBarColor">@color/solid_cream</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.SingerHub">
        <!--        <item name="windowSplashScreenBackground">@color/solid_cream</item>-->
        <!--        <item name="windowSplashScreenAnimatedIcon">@drawable/background_splash_12</item>-->
        <item name="postSplashScreenTheme">@style/Theme.SingerHub</item>
        <item name="windowSplashScreenAnimationDuration">100</item>
        <item name="android:statusBarColor">@color/solid_cream</item>
    </style>
</resources>